<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaletteActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/paletteViewTitle"
                android:text="paletteNameGoesHere"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/paletteViewSettingsButton"
                android:src="@drawable/gear"
                android:scaleType="fitCenter"
                android:focusable="true"
                android:clickable="true"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="50dp"
                android:layout_height="match_parent" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/exampleImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/logo"
            android:background="#000000"
            android:padding="10dp" />

        <TextView
            android:id="@+id/colorDisplay1"
            android:text="TEMP"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:background="@color/colorRed"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp" />

        <TextView
            android:id="@+id/colorDisplay2"
            android:text="TEMP"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:background="@color/colorBlue"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp" />

        <TextView
            android:id="@+id/colorDisplay3"
            android:text="TEMP"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:background="@color/colorYellow"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp" />

        <TextView
            android:id="@+id/colorDisplay4"
            android:text="TEMP"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:background="@color/colorGreen"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp" />

        <TextView
            android:id="@+id/colorDisplay5"
            android:text="TEMP"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:background="@color/colorRedDark"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp" />

        <TextView
            android:id="@+id/colorDisplay6"
            android:text="TEMP"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:background="@color/colorYellowDark"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp" />

    </LinearLayout>



</ScrollView>